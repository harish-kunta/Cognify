        <!-- Sound & Haptics & Animations Preferences -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/card_background"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/settings_background"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Preferences"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Sound Effects Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_volume" />

                    <TextView
                        style="@style/TextAppearance.Settings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="8"
                        android:text="Sound Effects"
                        android:textColor="@color/settings_text" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_weight="1"
                        android:id="@+id/soundEffectsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:trackTint="@color/switch_track_tint" />
                </LinearLayout>

                <!-- Haptics Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_volume" />

                    <TextView
                        style="@style/TextAppearance.Settings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="8"
                        android:text="Haptics"
                        android:textColor="@color/settings_text" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_weight="1"
                        android:id="@+id/hapticsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:trackTint="@color/switch_track_tint" />
                </LinearLayout>

                <!-- Animations Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_volume" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.Settings"
                        android:layout_marginStart="12dp"
                        android:layout_weight="8"
                        android:text="Animations"
                        android:textColor="@color/settings_text"
                        />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/animationsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:trackTint="@color/switch_track_tint" />
                </LinearLayout>

                <!-- Dark Mode Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/ic_dark_mode" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.Settings"
                        android:layout_marginStart="12dp"
                        android:layout_weight="8"
                        android:text="Dark Mode"
                        android:textColor="@color/settings_text"
                        />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/darkModeSwitch"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:trackTint="@color/switch_track_tint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Sign In Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSignIn"
                        style="@style/Button.Enabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/sign_in_with_google"
                        app:icon="@drawable/ic_google" />

                    <!-- Replay Tutorial Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/replayTutorialButton"
                        style="@style/Button.Disabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Replay Tutorial"
                        />

                    <!-- Reset Progress Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/resetProgressButton"
                        style="@style/Button.Disabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset Progress"
                        android:layout_margin="8dp"
                        android:textColor="@color/error"
                        app:strokeColor="@color/error"
                        app:strokeWidth="2dp" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>
</ScrollView>
